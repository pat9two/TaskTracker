
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:id="@+id/a">

    <TextView
        android:id="@+id/admin_main_title"
        android:text="Admin Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_divider"
        android:background="#1900ff"
        android:layout_width = "fill_parent"
        android:layout_height="2dp"
        android:layout_centerVertical ="true"
        android:layout_below="@id/admin_main_title" />

    <Space
        android:id="@+id/admin_spacing_1"
        android:layout_width="1dp"
        android:layout_height="75dp"/>

    <Button
        android:id="@+id/admin_main_work_button"
        android:layout_height="50dp"
        android:text="View Work Orders"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/admin_spacing_1"
        android:onClick="viewWorkOrders"/>

    <Space
        android:id="@+id/admin_spacing_2"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_below="@id/admin_main_work_button"/>

    <Button
        android:id="@+id/admin_main_emp_button"
        android:layout_height="50dp"
        android:text="View Employees"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/admin_spacing_2"
        android:onClick="viewEmployees"/>

    <Space
        android:id="@+id/admin_spacing_3"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_below="@id/admin_main_emp_button"/>

    <Button
        android:id="@+id/admin_main_dept_button"
        android:layout_height="50dp"
        android:text="View Departments"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/admin_spacing_3"
        android:onClick="viewDepartments"/>

    <Space
        android:id="@+id/admin_spacing_4"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_below="@id/admin_main_dept_button"/>

    <Button
        android:id="@+id/admin_main_logout_button"
        android:layout_height="50dp"
        android:text="Logout"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/admin_spacing_4"
        android:onClick="logoutAction"/>


</RelativeLayout>
