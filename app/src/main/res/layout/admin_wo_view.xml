<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/admin_wo_employee_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer">

    <TextView
        android:id="@+id/admin_wo_view_title"
        android:text="Admin: Work Orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_divider"
        android:background="#1900ff"
        android:layout_width = "fill_parent"
        android:layout_height="2dp"
        android:layout_centerVertical ="true"
        android:layout_below="@+id/admin_wo_view_title" />


    <EditText
        android:id="@+id/search_job_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search Criteria"
        android:inputType="text"
        android:layout_below="@id/title_divider" />

    <Button
        android:id="@+id/task_search_button"
        android:background="@drawable/ic_action_search"

        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title_divider"
        android:onClick="runSearch"/>

    <!-- create custom ListView based on jobs-->
    <ListView
        android:id="@+id/job_list_view"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/task_search_button"/>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/admin_wo_view_create_button"
            android:layout_height="70dp"
            android:layout_width="125dp"
            android:text="Create WO"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/admin_wo_view_delete_button"
            android:layout_height="70dp"
            android:layout_width="125dp"
            android:text="Delete WO"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>
