<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title_string"
        android:text="@string/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/user_spacing_1"
        android:layout_width="1dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/user_main_title"
        android:text="Job ID: XXXXXXX"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/user_spacing_1" />

    <Space
        android:id="@+id/user_spacing_2"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_below="@id/user_main_title" />

    <View
        android:id="@+id/title_divider"
        android:background="#1900ff"
        android:layout_width = "fill_parent"
        android:layout_height="2dp"
        android:layout_centerVertical ="true"
        android:layout_below="@id/title_string" />

    <Space
        android:id="@+id/user_spacing_3"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/user_main_title" />



    <EditText
        android:id="@+id/user_location_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Hello"
        android:inputType="text"
        android:layout_below="@id/user_spacing_3" />

    <Space
        android:id="@+id/user_spacing_4"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_below="@id/user_location_field" />
    <TextView
        android:id="@+id/user_location_spinner_label"
        android:text="Location:"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/user_spacing_4"
        />

    <!-- NEEDS RESIZING -->
    <Spinner
        android:id="@+id/admin_new_locationSpinner"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@id/user_spacing_4"
        android:layout_toRightOf="@id/user_location_spinner_label"/>

    <Space
        android:id="@+id/user_spacing_5"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_below="@id/user_spacing_4" />

    <Space
        android:id="@+id/user_spacing_6"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_below="@id/user_spacing_5" />

    <Space
        android:id="@+id/user_spacing_7"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_below="@id/admin_new_locationSpinner" />
    <Button
        android:id="@+id/user_start_button"
        android:layout_height="50dp"
        android:text="Start Job"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/user_spacing_7" />

    <Button
        android:id="@+id/user_end_button"
        android:layout_height="50dp"
        android:text="End Job"
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/user_spacing_7" />

</RelativeLayout>
