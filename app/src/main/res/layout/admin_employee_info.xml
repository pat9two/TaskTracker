<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:id="@+id/a_emp_new">

    <TextView
        android:id="@+id/admin_addEmp_main_title"
        android:text="Admin: Employee Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_divider"
        android:background="#1900ff"
        android:layout_width = "fill_parent"
        android:layout_height="2dp"
        android:layout_centerVertical ="true"
        android:layout_below="@id/admin_addEmp_main_title" />

    <ScrollView
        android:id="@+id/admin_new_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Space
                android:id="@+id/admin_emp_info_spacing_1"
                android:layout_width="1dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/admin_emp_info_fName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="First Name: "
                android:layout_below="@id/admin_emp_info_spacing_1" />

            <Space
                android:id="@+id/admin_emp_info_spacing_2"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_below="@id/admin_emp_info_fName"/>

            <TextView
                android:id="@+id/admin_emp_info_lName"
                android:text="Last Name: "
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_emp_info_spacing_2" />

            <Space
                android:id="@+id/admin_emp_info_spacing_3"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_below="@id/admin_emp_info_lName"/>

            <TextView
                android:id="@+id/admin_emp_info_eID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Eagle ID: "
                android:layout_below="@id/admin_emp_info_spacing_3" />

            <Space
                android:id="@+id/admin_emp_info_spacing_4"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_below="@id/admin_emp_info_eID"/>

            <TextView
                android:id="@+id/admin_emp_info_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="User Name: "
                android:layout_below="@id/admin_emp_info_spacing_4" />

            <Space
                android:id="@+id/admin_emp_info_spacing_5"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_below="@id/admin_emp_info_user"/>

            <TextView
                android:id="@+id/admin_emp_info_admin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Admin: "
                android:layout_below="@id/admin_emp_info_spacing_5" />
        </RelativeLayout>
    </ScrollView>

    <!-- BUTTON FOOTER -->

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/admin_emp_info_cancelButton"
            android:layout_height="50dp"
            android:text="Done"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:onClick="cancelAction"/>
    </RelativeLayout>

</RelativeLayout>
