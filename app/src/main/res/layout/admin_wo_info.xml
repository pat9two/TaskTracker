<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/admin_wo_info_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/admin_wo_info_title"
        android:text="Admin: Work Order - Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_divider"
        android:background="#1900ff"
        android:layout_width = "fill_parent"
        android:layout_height="2dp"
        android:layout_centerVertical ="true"
        android:layout_below="@+id/admin_wo_info_title" />

    <Space
        android:id="@+id/admin_wo_info_spacing_1"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/title_divider" />

    <TextView
        android:id="@+id/admin_wo_info_dept_label"
        android:text="Department: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_1" />

    <TextView
        android:id="@+id/admin_wo_info_dept_label_value"
        android:text=" DEPARTMENT VALUE "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_1"
        android:layout_toRightOf="@id/admin_wo_info_dept_label"
        android:layout_toEndOf="@id/admin_wo_info_dept_label"/>

    <Space
        android:id="@+id/admin_wo_info_spacing_2"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/admin_wo_info_dept_label" />

    <TextView
        android:id="@+id/admin_wo_info_loc_label"
        android:text="Location: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_2" />

    <TextView
        android:id="@+id/admin_wo_info_loc_label_value"
        android:text=" LOCATION VALUE "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_2"
        android:layout_toRightOf="@id/admin_wo_info_loc_label"
        android:layout_toEndOf="@id/admin_wo_info_loc_label"/>

    <Space
        android:id="@+id/admin_wo_info_spacing_3"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/admin_wo_info_loc_label" />

    <TextView
        android:id="@+id/admin_wo_info_desc_label"
        android:text="Description: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_3" />

    <Space
        android:id="@+id/admin_wo_info_spacing_4"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/admin_wo_info_desc_label" />

    <TextView
        android:id="@+id/admin_wo_info_desc_label_value"
        android:text=" DESCRIPTION VALUE "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_4"/>

    <Space
        android:id="@+id/admin_wo_info_spacing_5"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/admin_wo_info_desc_label_value" />

    <TextView
        android:id="@+id/admin_wo_info_mats_label"
        android:text="Materials: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_5" />

    <Space
        android:id="@+id/admin_wo_info_spacing_6"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/admin_wo_info_mats_label" />

    <TextView
        android:id="@+id/admin_wo_info_mats_label_value"
        android:text=" MATERIALS VALUE "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_6"/>

    <Space
        android:id="@+id/admin_wo_info_spacing_7"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/admin_wo_info_mats_label_value" />

    <TextView
        android:id="@+id/admin_wo_info_schedule_label"
        android:text="Schedule: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_7" />

    <TextView
        android:id="@+id/admin_wo_info_schedule_label_value"
        android:text=" MM/DD/YYYY"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/admin_wo_info_spacing_7"
        android:layout_toRightOf="@id/admin_wo_info_schedule_label"
        android:layout_toEndOf="@id/admin_wo_info_schedule_label"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/admin_info_save_button"
            android:layout_height="50dp"
            android:text="Save"
            android:layout_width="100dp"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/admin_info_cancel_button"
            android:layout_height="50dp"
            android:text="Cancel"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:onClick="cancelAction"/>

        <Button
            android:id="@+id/admin_info_delete_button"
            android:layout_height="50dp"
            android:text="Delete"
            android:layout_width="100dp"
            android:layout_toRightOf="@id/admin_info_save_button"
            android:layout_toLeftOf="@id/admin_info_cancel_button"
            android:onClick="deleteWorkorder"/>

    </RelativeLayout>

</RelativeLayout>