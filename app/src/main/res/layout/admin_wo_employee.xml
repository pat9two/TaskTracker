<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:id="@+id/a_wo_emp"
    >
    <RelativeLayout
        android:id="@+id/admin_wo_employee_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer">

    <!-- New Work Order Title String -->
    <TextView
        android:id="@+id/admin_wo_emp_title_string"
        android:text="Work Order: Active Employees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_divider"
        android:background="#1900ff"
        android:layout_width = "fill_parent"
        android:layout_height="2dp"
        android:layout_centerVertical ="true"
        android:layout_below="@id/admin_wo_emp_title_string" />

    <Space
        android:id="@+id/admin_wo_emp_spacing_2"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/title_divider"/>

    <ListView
        android:id="@+id/admin_wo_emp_listView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/admin_wo_emp_spacing_2"/>

    <Space
        android:id="@+id/admin_wo_emp_spacing_3"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/admin_wo_emp_listView"/>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/admin_wo_emp_assign_button"
        android:layout_height="70dp"
        android:layout_width="125dp"
        android:text="Assign Employee"
        android:onClick="addEmployee"/>

    <Button
        android:id="@+id/admin_wo_emp_remove_button"
        android:layout_height="70dp"
        android:layout_width="125dp"
        android:text="Remove Employee"
        android:layout_alignParentRight="true" />
    </RelativeLayout>

    </RelativeLayout>